<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="employee"
                type="ru.spb.yakovlev.androidacademy.testrecyclerviewbinding.common.Employee"/>
        <variable name="model"
                  type="ru.spb.yakovlev.androidacademy.testrecyclerviewbinding.features.EmployeeViewModel"/>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeight"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(employee.id)}"
                tools:text="@tools:sample/us_zipcodes"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{employee.name}"
                tools:text="@tools:sample/last_names"/>

    </LinearLayout>

</layout>